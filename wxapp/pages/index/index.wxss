/**index.wxss**/
.input {
    margin-right: 8rpx;
    width: 430rpx;
    height: 60rpx;
    border: solid 1px lightgray;
    border-radius: 40rpx;
    padding: 4px 4px 4px 4px;
}

.searchbar {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
}

.btnsearch {
    margin: 0;
    padding: 0;
    width: 80rpx;
    height: 80rpx;
    border: 1rpx solid lightgray;
    outline: none;
    border-radius: 40rpx;
    background-color: #fefefe;
    color: #000000;
    font-size: 30rpx;   
}

.buttonbar {
  width: 90%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 28rpx;
  margin-left: 5%;
}

.btnjump {
  margin: 0;
  padding: 0;
  width: 160rpx;
  height: 80rpx;
  border: 1rpx solid lightgray;
  outline: none;
  border-radius: 40rpx;
  background-color: #fefefe;
  color: #000000;
  font-size: 30rpx;
}

.line {
  width: 100%;
  height: 1px;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  background-color: lightgray;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: lightgray;
}

.hotcard {
  width: 100%;
  height: 80rpx;
  display: flex;
  line-height: 80rpx;
  color: lightgray;
}

.change {
  position: absolute;
  right: 16rpx;
  text-decoration: underline;
}

.about {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.gridview {
    position: relative;
    overflow: hidden;
}

.gridview-item {
    position: relative;
    float: left;
    width:20%;
    box-sizing: border-box;
}

.textitem {
  height: 60rpx;
  line-height: 60rpx;
}

.deckitem {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 0.8em;
}

.popup-card {
    width: 580rpx;
    height: auto;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    border: 1px solid lightgray;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-title {
  width: 100%;
  text-align: left;
  margin-top: 16rpx;
  margin-left: 24rpx;
}

.popup-btn {
  width: 100%;
  position: absolute;
  bottom: 0rpx;
}

.popup-close {
  padding: 0;
  width: 160rpx;
  height: 80rpx;
  border: 1rpx solid lightgray;
  outline: none;
  border-radius: 40rpx;
  background-color: #fefefe;
  color: #000000;
  font-size: 30rpx;
  float:right;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.popup-content {
  width: 564rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-top: 8rpx;
  margin-bottom: 96rpx;
}

.popup-image {
  width: 112rpx;
  height: 161rpx;
}

.imageitem {
  height: 163rpx;
  line-height: 163rpx;
}