}

.btnsearch {
    margin: 0;
    padding: 0;
    width: 80rpx;
    height: 80rpx;
    border: 1rpx solid lightgray;
    outline: none;
    border-radius: 40rpx;
    background-color: #fefefe;
    color: #000000;
    font-size: 30rpx;   
    position: absolute;
    right: 0;
    margin-right: 8rpx;
}

