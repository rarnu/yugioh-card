/* pages/cardlist/cardlist.wxss */

.space {
  height: 24rpx;
}

.oper {
  height: 5%;
  position:fixed; 
  bottom:0; 
}

.btnoper {
  margin: 0;
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid lightgray;
  border-radius: 40rpx;
  background-color: #fefefe;
  color: #000000;
  font-size: 30rpx;
}

.txtpage {
  width: 360rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.baroper {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.vitem {
  flex-direction: column;
  display: flex;
  box-sizing: border-box;
}

.textitem {
  height: 32rpx;
  font-size: 0.8em;
  margin-top: 8rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.listitem {
  height: 170rpx;
  display: flex;
  border-bottom: 1rpx solid lightgray;
}

.vimg {
  position: absolute;
  right: 8rpx;
  height: 154rpx;
  width: 105rpx;
  margin-top: 8rpx;
}
