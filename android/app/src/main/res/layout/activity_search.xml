<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="8dip" android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="32dip" android:orientation="horizontal"
                      android:weightSum="4">
            <TextView android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1"
                      android:text="@string/search_cardtype" android:gravity="left|center_vertical"/>
            <LinearLayout android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="3"
                          android:weightSum="5"
                          android:orientation="horizontal">
                <Button
                        android:id="@+id/btnTypeMon"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/dkgray"
                        android:text="@string/search_ct_mon"/>
                <Button
                        android:id="@+id/btnTypeMagic"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/dkgray"
                        android:text="@string/search_ct_magic"/>
                <Button
                        android:id="@+id/btnTypeTrap"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/dkgray"
                        android:text="@string/search_ct_trap"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="32dip" android:orientation="horizontal"
                      android:layout_weight="4">
            <TextView android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1"
                      android:text="@string/search_effect" android:gravity="left|center_vertical"/>
            <EditText
                    android:id="@+id/edtEffect"
                    android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="3"
                    android:background="@null" android:hint="@string/hint_effect"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:background="@android:color/darker_gray"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="8dip">
            <LinearLayout
                    android:id="@+id/layMagic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <TextView android:layout_width="match_parent" android:layout_height="32dip"
                          android:text="@string/search_mt" android:gravity="left|center_vertical"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="32dip"
                              android:orientation="horizontal">
                    <Button
                            android:id="@+id/btnMtNormal"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_normal"
                            android:background="@null"/>
                    <Button
                            android:id="@+id/btnMtEquip"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_equip"
                            android:background="@null"/>
                    <Button
                            android:id="@+id/btnMtQuick"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_quick"
                            android:background="@null"/>
                    <Button
                            android:id="@+id/btnMtCont"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_cont"
                            android:background="@null"/>
                    <Button
                            android:id="@+id/btnMtField"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_field"
                            android:background="@null"/>

                    <Button
                            android:id="@+id/btnMtRitual"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_mt_ritual"
                            android:background="@null"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layTrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <TextView android:layout_width="match_parent" android:layout_height="32dip"
                          android:text="@string/search_tt" android:gravity="left|center_vertical"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="32dip"
                              android:orientation="horizontal">
                    <Button
                            android:id="@+id/btnTtNormal"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_tt_normal"
                            android:background="@null"/>

                    <Button
                            android:id="@+id/btnTtCont"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_tt_cont"
                            android:background="@null"/>
                    <Button
                            android:id="@+id/btnTtCounter"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/dkgray"
                            android:text="@string/search_tt_counter"
                            android:background="@null"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layMonster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
